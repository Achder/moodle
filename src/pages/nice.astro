---
import PageLayout from "../layouts/page-layout.astro";
import Heading from "../components/heading.astro";
---

<PageLayout
  description="Imprint including address and contact info, as well as links to social media and job platforms."
>
  <Heading>Nice!</Heading>
</PageLayout>

<script>
  import { fade } from "../utils/animation";

  document.addEventListener("DOMContentLoaded", async () => {
    await fade(".fade", {
      startOffset: -50,
    });

    const rootStyle = getComputedStyle(document.documentElement);
    const brand = rootStyle.getPropertyValue("--color-brand");
    const encodedBrand = encodeURIComponent(brand);

    setTimeout(async () => {
      await fade(".fade", {
        startOffset: 0,
        endOffset: 50,
        startOpacity: 1,
        endOpacity: 0,
      });
      location.href = `/?bg=${encodedBrand}`;
    }, 200);
  });
</script>
