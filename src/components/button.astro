---
type Props = astroHTML.JSX.ButtonHTMLAttributes & {
  circle?: boolean;
  variant: "primary" | "ghost";
};

const { class: classes, circle, variant, ...buttonProps } = Astro.props;
---

<button
  {...buttonProps}
  class:list={[
    "cursor-pointer font-extrabold rounded-full text-3xl duration-50 active:scale-99 transition-all",
    "focus-visible:outline-dark focus-visible:outline-2 focus-visible:outline-offset-2",
    {
      "bg-dark text-brand hover:bg-brand hover:text-dark border-4 border-dark shadow-lg active:shadow-none":
        variant === "primary",
      "text-dark bg-brand": variant === "ghost",
      "grid place-content-center p-4": !!circle,
      "py-2 px-4": !circle,
    },
    classes,
  ]}><slot /></button
>
