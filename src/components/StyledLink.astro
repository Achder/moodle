---
type Props = {
  href: string;
  class?: string;
};

const { href, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  class:list={[
    className,
    "underline underline-offset-2 hover:no-underline whitespace-nowrap font-bold transition-colors",
  ]}
  {...rest}
>
  <slot />
</a>
