---
type Props = astroHTML.JSX.ButtonHTMLAttributes;
const { class: classes, ...buttonProps } = Astro.props;
---

<button
  {...buttonProps}
  class:list={[
    "bg-dark text-brand hover:bg-brand hover:text-dark border-4 border-dark cursor-pointer font-extrabold py-2 px-4 rounded-full text-3xl shadow-lg active:shadow-none duration-50 active:scale-99 transition-all fade",
    classes,
  ]}><slot /></button
>
